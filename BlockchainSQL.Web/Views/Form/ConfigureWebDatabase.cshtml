@model BlockchainSQL.Web.Models.ConfigureWebDatabaseFormInput

@using (Html.BeginFormEx(Model, "form-horizontal", false)) {
    <div class="form-group">
        @Html.LabelFor(o => o.Server, new {
       @class = "col-sm-2 control-label",
   })
        <div class="col-sm-8">
            @Html.TextBoxFor(o => o.Server, new {
           @class = "form-control"
       })
            @Html.ValidationMessageForEx(o => o.Server)
        </div>
        @Html.LabelFor(o => o.Port, new {
       @class = "col-sm-1 control-label"
   })
        <div class="col-sm-1">
            @Html.TextBoxFor(o => o.Port, new {
           @class = "form-control",
           rows = "8"
       })

            @Html.ValidationMessageForEx(o => o.Port)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.Database, new {
       @class = "col-sm-2 control-label"
   })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.Database, new {
           @class = "form-control"
       })
            @Html.ValidationMessageForEx(o => o.Database)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.Username, new {
       @class = "col-sm-2 control-label"
   })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.Username, new {
           @class = "form-control",
           rows = "8"
       })
            @Html.ValidationMessageForEx(o => o.Username)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.Password, new {
       @class = "col-sm-2 control-label"
   })
        <div class="col-sm-10">
            @Html.PasswordFor(o => o.Password, new {
           @class = "form-control",
           rows = "8"
       })
            @Html.ValidationMessageForEx(o => o.Password)
        </div>
    </div>
    <div class="form-group">
             @Html.LabelFor(o => o.GenerateIfNotExists, new {
                           @class = "col-sm-2 control-label"
                       })
        <div class="col-sm-1">
            @Html.CheckBoxFor(o => o.GenerateIfNotExists, new {
                @class = "form-control",
                style = "height: 25px",
                rows = "2"
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <input type="submit" value="Save" class="btn btn-ar btn-lg btn-default"/>
        </div>
    </div>
}