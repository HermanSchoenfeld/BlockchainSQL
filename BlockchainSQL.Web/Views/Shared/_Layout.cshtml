<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/images/favicon.ico"/>
    <meta name="description" content="">

    <!-- CSS -->
    <link href="/css/preload.css" rel="stylesheet">
    <link href="@Url.Content("/css/vendors.css")" rel="stylesheet">
    <link href="@Url.Content("/css/style-blue.css")" rel="stylesheet">
    <link href="@Url.Content("/css/width-full.css")" rel="stylesheet">
    <link href="@Url.Content("/css/app.css")" rel="stylesheet"/>
    
    <script src="@Url.Content("~/js/lib/jquery/jquery.min.js")" type="text/javascript"></script>
    
    @if (ViewBag.EnableSyntaxHighlighting) {
        <link href="@Url.Content("/css/codemirror.css")" rel="stylesheet"/>
        <script src="@Url.Content("~/js/site/codemirror.js")"></script>
        <script src="@Url.Content("~/js/site/sql.js")"></script>
       }
       <link href="@Url.Content("~/themes/gui2/AwesomeMvc.css")" rel="stylesheet" type="text/css"/>
</head>

@if (ViewBag.ShowLoading) {
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
}

<body>
@Html.Partial("_Analytics")
<div id="sb-site">
    <div class="boxed">
        @Html.Partial("_Header")
        @Html.Partial("_Menu")
        @if (ViewData.ContainsKey("PageMessages")) {
            @Html.Partial("_PageMessages", (IEnumerable<PageMessage>)ViewBag.PageMessages)
        }
        @RenderBody()
        @Html.Partial("_Footer")
    </div> <!-- boxed -->
</div> <!-- sb-site -->
@Html.Partial("_SlideBarRight")
@Html.Partial("_BackTopButton")

<script src="@Url.Content("~/js/site/vendors.js")"></script>
<script src="@Url.Content("~/js/site/app.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/site/app_init.js")"></script>
<script src="@Url.Content("~/js/site/AwesomeMvc.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/site/utils.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/site/awem.js")" type="text/javascript"></script>

<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
    <script src="/js/site/html5shiv.min.js"></script>
    <script src="/js/site/respond.min.js"></script>
<![endif]-->

@Html.Awe().Init();

</body>

</html>