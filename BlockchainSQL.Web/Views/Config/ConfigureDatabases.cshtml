@model BlockchainSQL.Web.Models.ConfigureDatabaseFormInput;

@using (Html.BeginFormEx("ConfigureDatabases", "Config", Model, "form-horizontal", false)) {
    <h4> Web Application Database</h4>
    <div class="form-group">
        @Html.LabelFor(o => o.WebDbModel.Server, new {
            @class = "col-sm-2 control-label",
        })
        <div class="col-sm-8">
            @Html.TextBoxFor(o => o.WebDbModel.Server, new {
                @class = "form-control"
            })
            @Html.ValidationMessageForEx(o => o.WebDbModel.Server)
        </div>
        @Html.LabelFor(o => o.WebDbModel.Port, new {
            @class = "col-sm-1 control-label"
        })
        <div class="col-sm-1">
            @Html.TextBoxFor(o => o.WebDbModel.Port, new {
                @class = "form-control",
                rows = "8"
            })
            @Html.ValidationMessageForEx(o => o.WebDbModel.Port)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.WebDbModel.Database, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.WebDbModel.Database, new {
                @class = "form-control"
            })
            @Html.ValidationMessageForEx(o => o.WebDbModel.Database)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.WebDbModel.Username, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.WebDbModel.Username, new {
                @class = "form-control",
                rows = "8"
            })
            @Html.ValidationMessageForEx(o => o.WebDbModel.Username)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.WebDbModel.Password, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-10">
            @Html.PasswordFor(o => o.WebDbModel.Password, new {
                @class = "form-control",
                rows = "8"
            })
            @Html.ValidationMessageForEx(o => o.WebDbModel.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.WebDbModel.GenerateIfNotExists, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-1">
            @Html.CheckBoxFor(o => o.WebDbModel.GenerateIfNotExists, new {
                @class = "form-control",
                style = "height: 25px",
                rows = "2"
            })
        </div>
    </div>
    <h4> BlockchainSQL Database</h4>
    <div class="form-group">
        @Html.LabelFor(o => o.BlockchainDbModel.Server, new {
            @class = "col-sm-2 control-label",
        })
        <div class="col-sm-8">
            @Html.TextBoxFor(o => o.BlockchainDbModel.Server, new {
                @class = "form-control"
            })
            @Html.ValidationMessageForEx(o => o.BlockchainDbModel.Server)
        </div>
        @Html.LabelFor(o => o.BlockchainDbModel.Port, new {
            @class = "col-sm-1 control-label"
        })
        <div class="col-sm-1">
            @Html.TextBoxFor(o => o.BlockchainDbModel.Port, new {
                @class = "form-control",
                rows = "8"
            })
            @Html.ValidationMessageForEx(o => o.BlockchainDbModel.Port)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.BlockchainDbModel.Database, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.BlockchainDbModel.Database, new {
                @class = "form-control"
            })
            @Html.ValidationMessageForEx(o => o.BlockchainDbModel.Database)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.BlockchainDbModel.Username, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.BlockchainDbModel.Username, new {
                @class = "form-control",
                rows = "8"
            })
            @Html.ValidationMessageForEx(o => o.BlockchainDbModel.Username)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.BlockchainDbModel.Password, new {
            @class = "col-sm-2 control-label"
        })
        <div class="col-sm-10">
            @Html.PasswordFor(o => o.BlockchainDbModel.Password, new {
                @class = "form-control",
                rows = "8"
            })
            @Html.ValidationMessageForEx(o => o.BlockchainDbModel.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <input type="submit" value="Save" class="btn btn-ar btn-lg btn-default"/>
        </div>
    </div>
}